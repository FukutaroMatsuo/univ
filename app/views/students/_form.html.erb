<!--パーシャルで使うインスタンス変数をここで定義-->
<%= render 'shared/errors', obj: @student %>

<!--中央に寄せるのでcontainer-->
<!--このままだとpaddingがないので、scssに記述-->
<div class="container">
  <!--sign-up-formはscss用のclass-->
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <!--文字通りカードのように浮き上がらせて表示-->
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Sign up" : "Edit your profile" %></h3>
        <div class="row">
          <!-- form_for @student do |f| これが元の書式-->
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, placeholder: "Enter your full name", autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.email_field :email, placeholder: "Enter your email address" %>
                <%= f.label :email, class: "active" %>
              </div>
            </div>
            <!--下記はpasswordの送信エリアだが、studentcontrollerのprivate以下でpasswordを追記する必要あり-->
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "Choose your password" %>
                <%= f.label :password, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password_confirmation, placeholder: "Confirm your password" %>
                <%= f.label :password_confirmation, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <!--classは下記のように連続して記述-->
                <!--また、下記ではtrueならsign up、folseなら:以下を返すメソッド-->
                <!--これを書くときは()を忘れない-->
                <%= f.button(@student.new_record? ? '<i class="material-icons right">arrow_forward</i>Sign up'.html_safe : '<i class="material-icons right">arrow_forward</i>Submit changes'.html_safe, class: "btn orange waves-effect waves-light right") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>